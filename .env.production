# Backend production environment - DO NOT COMMIT SECRETS
ENV=prod
PROJECT_NAME=ELECTA API

# SECURITY
SECRET_KEY=replace_this_with_a_long_random_value

# Token lifetime (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# DATABASE / CACHE - use container hostnames, not localhost
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://electa:electa@db:5432/electa_db
REDIS_URL=redis://redis:6379/0

# CORS: set to your real domains
CORS_ORIGINS=["http://localhost:3001"]

# SMS
SMS_PROVIDER=mock
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1234567890

# Monitoring (optional)
SENTRY_DSN=
